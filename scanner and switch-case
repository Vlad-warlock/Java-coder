import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        /*Напишите программу с использованием scanner и switch-case.
        Программа должна читать цифру (от 1 до 9)
        и в ответ выводить эту же цифру текстом: "one", "two" и так до 9.*/
        Scanner console = new Scanner(System.in);
        System.out.println("Введіть число");
        int number = console.nextInt();
        switch (number) {
            case 1:
                System.out.println("one");
                break;
            case 2:
                System.out.println("two");
                break;
            case 3:
                System.out.println("three");
                break;
            case 4:
                System.out.println("four");
                break;
            case 5:
                System.out.println("five");
                break;
            case 6:
                System.out.println("six");
                break;
            case 7:
                System.out.println("seven");
                break;
            case 8:
                System.out.println("eight");
                break;
            case 9:
                System.out.println("nine");
                break;
            default:
                System.out.println("Помилка. Введіть число від 1 до 9.");
        }
    }
}
